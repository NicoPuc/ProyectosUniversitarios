<div class="center-content">
  <h2>Editar Usuario</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name, "Nombre" %>
      <br />
      <%= f.text_field :name, class: "input", autofocus: true, autocomplete: "name", placeholder: "10 caracteres mínimo" %>
    </div>

    <div class="field">
      <br>
      <%= f.label :Descripción %><br />
      <%= f.text_field :description, class: "input", autofocus: true, autocomplete: "description" %>
    </div>

    <div class="field">
      <br>
      <%= f.label :Número_de_teléfono %><br />
      <%= f.number_field :phone, class: "input", autofocus: true, autocomplete: "phone" %>
    </div>

    <div class="field">
      <br>
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "input", autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <br>
      <%= f.label :Contraseña %> <i>(<%= 10 %> caracteres mínimo)</i><br />
      <%= f.password_field :password, class: "input", autocomplete: "new-password", placeholder: "Ignora si no la cambias" %>
    </div>

    <div class="field">
    <br>
      <%= f.label :Confirmar_Contraseña %><br />
      <%= f.password_field :password_confirmation, class: "input", autocomplete: "new-password" %>
    </div>

    <div class="field">
    <br>
      <%= f.label :Contraseña_Actual %> <br>
      <%= f.password_field :current_password, class: "input", autocomplete: "current-password", placeholder: "Para confirmar cambios" %>
    </div>

    <br>
    <div class="actions actions-inline">
      <button type="submit" class="Btn thick-btn">Actualizar
      <svg class="svg" viewBox="0 0 512 512">
      <path d="M410.3 231l11.3-11.3-33.9-33.9-62.1-62.1L291.7 89.8l-11.3 11.3-22.6 22.6L58.6 322.9c-10.4 10.4-18 23.3-22.2 37.4L1 480.7c-2.5 8.4-.2 17.5 6.1 23.7s15.3 8.5 23.7 6.1l120.3-35.4c14.1-4.2 27-11.8 37.4-22.2L387.7 253.7 410.3 231zM160 399.4l-9.1 22.7c-4 3.1-8.5 5.4-13.3 6.9L59.4 452l23-78.1c1.4-4.9 3.8-9.4 6.9-13.3l22.7-9.1v32c0 8.8 7.2 16 16 16h32zM362.7 18.7L348.3 33.2 325.7 55.8 314.3 67.1l33.9 33.9 62.1 62.1 33.9 33.9 11.3-11.3 22.6-22.6 14.5-14.5c25-25 25-65.5 0-90.5L453.3 18.7c-25-25-65.5-25-90.5 0zm-47.4 168l-144 144c-6.2 6.2-16.4 6.2-22.6 0s-6.2-16.4 0-22.6l144-144c6.2-6.2 16.4-6.2 22.6 0s6.2 16.4 0 22.6z"></path>
      </svg>
      </button>
    <% end %>
    <%= button_to registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "Btn Btn--red thick-btn" do %>
      Borrar cuenta
      <svg class="svg" viewBox="0 0 24 24">
        <path d="M24 20.188l-8.315-8.209 8.2-8.282-3.697-3.697-8.212 8.318-8.31-8.203-3.666 3.666 8.321 8.24-8.206 8.313 3.666 3.666 8.237-8.318 8.285 8.203z"></path>
      </svg>
    <% end %>
  </div>

  <div class="actions">
    <button class="Btn Btn--grey" onclick="window.location.href='/';">Volver
      <svg class="svg" viewBox="0 0 46 40">
        <path transform="rotate(180 23 20)" d="M46 20.038c0-.7-.3-1.5-.8-2.1l-16-17c-1.1-1-3.2-1.4-4.4-.3-1.2 1.1-1.2 3.3 0 4.4l11.3 11.9H3c-1.7 0-3 1.3-3 3s1.3 3 3 3h33.1l-11.3 11.9c-1 1-1.2 3.3 0 4.4 1.2 1.1 3.3.8 4.4-.3l16-17c.5-.5.8-1.1.8-1.9z"></path>
      </svg>
    </button>
  </div>
  
